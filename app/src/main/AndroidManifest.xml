<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="ir.popittv.myapplication">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.PopitTv"
    android:usesCleartextTraffic="true">
    <activity
      android:name=".activitys.UserActivity"
      android:exported="false"
      android:screenOrientation="landscape"/>
    <activity
      android:name=".activitys.PlayerActivity"
      android:exported="false"
      android:screenOrientation="landscape"/>
    <activity
      android:name=".activitys.DetailActivity"
      android:exported="false"
      android:screenOrientation="landscape"/>
    <activity
      android:name=".activitys.AllChannelActivity"
      android:exported="false"
      android:screenOrientation="landscape"/>
    <activity
      android:name=".activitys.GameActivity"
      android:exported="false"
      android:screenOrientation="landscape"/>
    <activity
      android:name=".activitys.FarsiActivity"
      android:exported="false"
      android:screenOrientation="landscape"/>
    <activity
      android:name=".activitys.StudyActivity"
      android:exported="false"
      android:screenOrientation="landscape"/>
    <activity
      android:name=".activitys.RealityActivity"
      android:exported="false"
      android:screenOrientation="landscape"/>
    <activity
      android:name=".ui.TestActivity"
      android:exported="false"
      android:screenOrientation="landscape"/>
    <activity
      android:name=".activitys.MainActivity"
      android:exported="true"
      android:screenOrientation="landscape">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>