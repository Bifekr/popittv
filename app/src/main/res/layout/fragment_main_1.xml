<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:id="@+id/cons_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-40dp"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent="1"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintVertical_bias="1">



    <RelativeLayout
      android:layout_marginTop="50dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/transparent_color">

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv1_frg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/transparent_color" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      app:cardCornerRadius="48dp"
      app:cardElevation="12dp">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/sideBarColor">

        <LinearLayout
          android:id="@+id/cardFeature2_dashboard"
          android:layout_width="140dp"
          android:layout_height="200dp"
          android:layout_alignParentRight="true"
          android:layout_margin="12dp"
          android:background="@color/banner_background"
          android:orientation="vertical"
          android:padding="8dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/baloo"
            android:text="Animation for all kids"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="all animation for kods and whatch for learn and study somethings for life" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rv2_first_dashboard"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toLeftOf="@id/cardFeature2_dashboard"
          android:background="@color/transparent_color" />

      </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      app:cardCornerRadius="25dp"
      app:cardElevation="12dp">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rv3_frg1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="12dp"
          android:background="@color/home_background" />

      </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      app:cardCornerRadius="25dp"
      app:cardElevation="12dp">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sideBarColor">


        <LinearLayout
          android:id="@+id/cardFeature4_dashboard"
          android:layout_width="140dp"
          android:layout_height="match_parent"
          android:layout_marginStart="12dp"
          android:layout_marginLeft="8dp"
          android:layout_marginTop="12dp"
          android:layout_marginEnd="12dp"
          android:layout_marginBottom="12dp"
          android:background="@drawable/custom_card_feature"
          android:orientation="vertical"
          android:padding="8dp">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Animation for all kids"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="all animation for kods and whatch for learn and study somethings for life" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rv4_frg1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/cardFeature4_dashboard"
          android:background="@color/home_background" />

      </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="vertical"
      android:padding="20dp">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/bree_serif"
          android:text="All Categury"
          android:textSize="18sp"
          android:textStyle="bold" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:fontFamily="@font/bree_serif"
          android:text="View More"
          android:textSize="12sp"
          android:textStyle="bold" />
      </RelativeLayout>

      <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    </LinearLayout>



  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>
</layout>



