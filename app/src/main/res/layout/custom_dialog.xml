      android:layout_marginTop="60dp"
      android:visibility="gone"
   />-->
  <TextView
    android:padding="@dimen/plane_08"
    android:textAlignment="center"
    android:textDirection="rtl"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="اگر هنوز موفق به ارسال شماره تماس نشده اید از والدین خود درخواست راهنمایی کنید"
    app:layout_constraintBottom_toBottomOf="@+id/send_customLogin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/et_phone_userProfile"
    app:layout_constraintTop_toTopOf="@+id/et_phone_userProfile" />

  <ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/parent_help"
    app:layout_constraintBottom_toBottomOf="@+id/send_customLogin"
    app:layout_constraintEnd_toStartOf="@+id/send_customLogin"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/et_phone_userProfile" />

  </androidx.constraintlayout.widget.ConstraintLayout>

