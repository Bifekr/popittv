<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".activity.DetailActivity">

    <ScrollView
      android:id="@+id/scroll"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/plane_16">

        <androidx.cardview.widget.CardView
          android:id="@+id/parentHeader_detailActivity"
          android:layout_width="match_parent"
          android:layout_height="170dp"
          android:layout_marginBottom="@dimen/plane_08"
          app:cardCornerRadius="@dimen/plane_16"
          app:cardElevation="@dimen/plane_08"
          app:layout_constraintBottom_toTopOf="@id/rvAllVideo_detailActivity"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/popit_yellow"
            android:paddingLeft="@dimen/plane_04"
            android:paddingTop="@dimen/plane_04"
            android:paddingRight="@dimen/plane_04"
            android:paddingBottom="6dp">


            <androidx.cardview.widget.CardView
              android:id="@+id/parentPoster_itemDef"
              android:layout_width="0dp"
              android:layout_height="0dp"
              app:cardCornerRadius="@dimen/plane_16"
              app:cardElevation="@dimen/plane_08"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"

              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintWidth_percent=".98">

              <ImageView
                android:id="@+id/ivBanner_itemChannel_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:elevation="@dimen/plane_16"
                android:transitionName="banner_channel"
                android:scaleType="centerCrop"
                android:src="@drawable/trophy" />
            </androidx.cardview.widget.CardView>

            <TextView
              android:id="@+id/tvAge2AllChannel"
              android:transitionName="tvAge2AllChannel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:elevation="@dimen/plane_16"
              android:gravity="center_horizontal|center_vertical"
              android:text="2 to 4"
              android:textSize="12sp"
              app:layout_constraintBottom_toBottomOf="@id/titleSub22_player"
              app:layout_constraintEnd_toStartOf="@id/titleSub22_player"
              app:layout_constraintTop_toTopOf="@id/titleSub22_player" />

            <TextView
              android:id="@+id/titleSub22_player"
              android:transitionName="titleSub22_player"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/plane_16"
              android:elevation="@dimen/plane_16"
              android:gravity="center_horizontal|center_vertical"
              android:paddingLeft="@dimen/plane_08"
              android:text="سن پیشنهادی :"
              android:textSize="12sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias=".1" />

            <androidx.constraintlayout.widget.ConstraintLayout
              android:id="@+id/parentProfile"
              android:layout_width="0dp"
              android:layout_height="70dp"
              android:elevation="@dimen/plane_16"
              android:background="@drawable/shape_tag5"
              android:padding="@dimen/plane_04"
              app:layout_constraintBottom_toBottomOf="@+id/parentPoster_itemDef"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintVertical_bias=".01">


              <androidx.cardview.widget.CardView
                android:id="@+id/parentChannelProfile_itemAllChan"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="@dimen/plane_06"
                android:transitionName="cardProfile_channel"
                app:cardCornerRadius="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/parentSub"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.makeramen.roundedimageview.RoundedImageView
                  android:id="@+id/ivProfile_itemAllChan"
                  android:layout_width="42dp"
                  android:layout_height="42dp"
                  android:layout_gravity="center_vertical|center_horizontal"
                  app:riv_border_color="@color/blue_bg_light"
                  app:riv_border_width="3dp"

                  app:riv_corner_radius="14dp" />

              </androidx.cardview.widget.CardView>

              <TextView
                android:id="@+id/titleFaItemAllChannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent40"
                android:fontFamily="@font/lalezar_regular"
                android:gravity="center_horizontal"
                android:includeFontPadding="true"
                android:paddingStart="15dp"
                android:transitionName="faTran"
                android:paddingEnd="1dp"
                android:text="fdkljfdkjfg rfg  "
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/titleEnItemAllChannel"
                app:layout_constraintEnd_toStartOf="@+id/parentSub"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/parentChannelProfile_itemAllChan"
                app:layout_constraintTop_toTopOf="@id/parentChannelProfile_itemAllChan" />

              <TextView
                android:id="@+id/titleEnItemAllChannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent40"
                android:fontFamily="@font/baloo"
                android:gravity="start"
                android:includeFontPadding="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:transitionName="enTran"
                android:text="fdkljfdkjfg rfg "
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@id/parentChannelProfile_itemAllChan"
                app:layout_constraintEnd_toEndOf="@id/titleFaItemAllChannel"
                app:layout_constraintStart_toStartOf="@id/titleFaItemAllChannel"
                app:layout_constraintTop_toBottomOf="@id/titleFaItemAllChannel" />


              <Button
                android:id="@+id/parentSub"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/plane_08"
                android:background="@drawable/shape_active_youtube"
                android:scaleType="fitXY"
                android:text="Subscribe"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:transitionName="parentSub"
                app:layout_constraintBottom_toTopOf="@id/titleSub2_player"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".5"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent=".18" />

              <TextView
                android:id="@+id/tvSubAllChannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
android:transitionName="tvSubAllChannel"
                android:text="56 m"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/titleSub2_player"
                app:layout_constraintStart_toStartOf="@id/parentSub"
                app:layout_constraintTop_toBottomOf="@id/parentSub" />

              <TextView
                android:id="@+id/titleSub2_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="@dimen/plane_08"
                android:text="دنبال کننده ها :"
                android:textSize="12sp"
                android:transitionName="titleSub2_player"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/parentSub"
                app:layout_constraintStart_toEndOf="@id/tvSubAllChannel"
                app:layout_constraintTop_toBottomOf="@id/parentSub" />


            </androidx.constraintlayout.widget.ConstraintLayout>

          </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvAllVideo_detailActivity"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/parentHeader_detailActivity" />
      </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
