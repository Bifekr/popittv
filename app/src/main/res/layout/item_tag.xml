<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/parentItemTag"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="200dp"
  android:layout_height="190dp"
  android:layoutDirection="ltr"
  app:cardBackgroundColor="@color/transparent_color"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  app:cardCornerRadius="@dimen/plane_16"
 >

<androidx.cardview.widget.CardView
  android:layout_alignParentBottom="true"
  android:layout_width="match_parent"
  android:layout_height="150dp"
  android:layout_marginTop="30dp"
  app:cardCornerRadius="12dp"
  android:layout_marginRight="20dp">
  <RelativeLayout
    android:id="@+id/tagParent_itemTag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_tag6">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"
      android:fontFamily="@font/baloo"
      android:text="#"
      android:layout_marginTop="@dimen/plane_16"
      android:layout_marginStart="@dimen/plane_24"
      android:textAllCaps="true"
      android:textSize="30sp" />

    <TextView
      android:id="@+id/tagTitle_itemTag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@color/transparent_color"
      android:padding="14dp"
      android:textSize="14sp"
      android:text="expand all"
      android:textColor="@color/black" />


  </RelativeLayout>

</androidx.cardview.widget.CardView>

    <ImageView
      android:id="@+id/tagImage_itemTag"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_alignParentRight="true"
      android:elevation="10dp"
      android:src="@drawable/tag_sonic_1" />
</RelativeLayout>