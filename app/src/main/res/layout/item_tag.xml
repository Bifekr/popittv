<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/parentItemTag"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="120dp"
  android:layout_height="90dp"
  android:layoutDirection="ltr"
  android:layout_margin="@dimen/plane_08"
  app:cardBackgroundColor="@color/transparent_color"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  app:cardCornerRadius="@dimen/plane_16"
 >

<androidx.cardview.widget.CardView
  android:layout_alignParentBottom="true"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginTop="30dp"
  app:cardCornerRadius="12dp"
  android:layout_marginEnd="20dp">
  <RelativeLayout
    android:id="@+id/tagParent_itemTag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_tag6">

    <TextView
      android:id="@+id/titleFa_tag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/baloo"
      android:layout_alignParentTop="true"
      android:text="#"
      android:layout_marginTop="@dimen/plane_16"
      android:layout_marginEnd="@dimen/plane_24"
      android:layout_alignParentRight="true"
      android:textAllCaps="true"
      android:textSize="8sp" />

    <TextView
      android:id="@+id/titleEn_tag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@color/transparent_color"
      android:padding="14dp"
      android:text="expand all"
      android:textColor="@color/black"
      android:textSize="8sp" />


  </RelativeLayout>

</androidx.cardview.widget.CardView>

  <ImageView
    android:id="@+id/tagImage_itemTag"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_alignParentEnd="true"
    android:elevation="10dp"
    android:src="@drawable/tag_sonic_1" />
</RelativeLayout>