<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:cardCornerRadius="20dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/conitemvideo"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
      <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/banner1" />

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parentNameVideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradian3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/conitemvideo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView">

        <LinearLayout
          android:gravity="center"
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_constraintTop_toTopOf="@+id/parentNameVideo"
          app:layout_constraintStart_toStartOf="@id/parentNameVideo"
          app:layout_constraintBottom_toBottomOf="@id/parentNameVideo"
          app:layout_constraintEnd_toEndOf="@id/parentNameVideo">
          <TextView

            android:id="@+id/titleFa_video_itemVideoThumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="38dp"
            android:text="fبی بلیبل بلالبلا  تا تالاا  بللا  لال  لاالنهمخلی سل "
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            />

          <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            />
          <View
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:text="fdkljfdkjfg rfg  fggtfgf fg  fgdlfkj"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />


        </LinearLayout>



      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiant2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
          android:id="@+id/cardViewProfile"
          android:layout_width="64dp"
          android:layout_height="64dp"
          android:background="@color/transparent_color"
          app:cardCornerRadius="50dp"
          app:cardElevation="12dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.05"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.05">

          <ImageView
            android:id="@+id/itemProfile_channel_videoThumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete" />

        </androidx.cardview.widget.CardView>


        <TextView
          android:id="@+id/titleEn_channel_itemVideoThumb"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="12dp"
          android:text="dklfdjkfhdkffkh"
          android:textColor="@color/white"
          android:textSize="18sp"
          app:layout_constraintBottom_toTopOf="@id/titleFa_channel_itemVideoThumb"
          app:layout_constraintStart_toEndOf="@id/cardViewProfile"
          app:layout_constraintTop_toTopOf="@id/cardViewProfile" />

        <TextView
          android:id="@+id/titleFa_channel_itemVideoThumb"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="12dp"
          android:text="dklfdjkfhdkffkh"
          android:textColor="@color/white"
          android:textSize="18sp"
          app:layout_constraintBottom_toBottomOf="@id/cardViewProfile"
          app:layout_constraintStart_toEndOf="@id/cardViewProfile"
          app:layout_constraintTop_toBottomOf="@id/titleEn_channel_itemVideoThumb" />


      </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/parentDetail"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintWidth_percent=".1"
      app:layout_constraintHeight_percent="1"
      app:layout_constraintHorizontal_bias="1"
      android:background="@drawable/custom_card_feature"
      android:gravity="center_horizontal"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/parentDetail"
        app:layout_constraintEnd_toEndOf="@id/parentDetail"
        app:layout_constraintStart_toStartOf="@id/parentDetail"
        app:layout_constraintTop_toTopOf="@id/parentDetail">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_like" />

        <TextView
          android:id="@+id/txt1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="fdkljfdkjfdlfkj"
          android:textColor="@color/reply_blue_800" />


        <View
          android:id="@+id/spacer_detail_1"
          android:layout_width="match_parent"
          android:layout_height="0.8dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="15dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_marginEnd="15dp"
          android:layout_marginRight="50dp"
          android:background="@color/black"
          android:gravity="center"
          app:layout_constraintTop_toBottomOf="@id/txt1" />


        <ImageView

          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/ic_like" />

        <TextView
          android:id="@+id/txt22"

          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="fdkljfdkjfdlfkj"
          android:textColor="@color/reply_blue_800" />


        <View
          android:id="@+id/spacer_detail_2"
          android:layout_width="match_parent"
          android:layout_height="0.8dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="15dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_marginEnd="15dp"
          android:layout_marginRight="50dp"
          android:background="@color/black"
          android:gravity="center"
          app:layout_constraintTop_toBottomOf="@id/txt22" />

        <ImageView

          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/ic_like" />

        <TextView
          android:id="@+id/txt3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="fdkljfdkjfdlfkj"
          android:textColor="@color/reply_blue_800" />


        <View
          android:id="@+id/spacer_detail_3"
          android:layout_width="match_parent"
          android:layout_height="0.8dp"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="15dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_marginEnd="15dp"
          android:layout_marginRight="50dp"
          android:background="@color/black"
          android:gravity="center"
          app:layout_constraintTop_toBottomOf="@id/txt3" />


        <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/ic_like" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="fdkljfdkjfdlfkj"
          android:textColor="@color/reply_blue_800" />

      </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>