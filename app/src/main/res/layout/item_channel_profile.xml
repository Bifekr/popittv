<?xml version="1.0" encoding="utf-8"?>
<layout>

  <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_itemProfileChan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:layout_margin="@dimen/plane_02"
    app:cardCornerRadius="24dp">

    <LinearLayout
      android:id="@+id/llBack"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_horizontal|center_vertical"
      android:orientation="vertical">

      <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/itemChann_profile"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_gravity="center_vertical|center_horizontal"
        app:riv_border_color="@color/blue_bg_light"
        app:riv_border_width="3dp"
        app:riv_corner_radius="20dp" />

      <TextView
        android:textSize="11sp"
        android:textStyle="bold"
        android:background="@drawable/shape_tag4"
        android:paddingStart="@dimen/plane_04"
        android:paddingEnd="@dimen/plane_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:text="age" />

      <TextView
        android:textSize="11sp"
        android:id="@+id/tvAge_ItemProfileChan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/baloo"
        android:gravity="center_horizontal|center_vertical"
        android:text="2 to 8" />
    </LinearLayout>

  </androidx.cardview.widget.CardView>
</layout>
