<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cons_mainMenu"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:elevation="4dp"
      android:background="@drawable/btn_border"
      android:padding="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.05"
      app:layout_constraintWidth_percent=".9"
      app:layout_constraintHeight_percent=".2">


      <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@id/cons_mainMenu"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        app:layout_constraintStart_toStartOf="@id/cons_mainMenu"
        app:layout_constraintTop_toTopOf="@id/cons_mainMenu" />

      <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/iv_btn_2"
        app:layout_constraintBottom_toBottomOf="@id/cons_mainMenu"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@id/cons_mainMenu"
        app:layout_constraintVertical_bias="1.0" />

      <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/iv_btn_3"
        app:layout_constraintBottom_toBottomOf="@id/cons_mainMenu"
        app:layout_constraintEnd_toStartOf="@id/btn4"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@id/cons_mainMenu" />

      <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/iv_btn_4"
        app:layout_constraintBottom_toBottomOf="@id/cons_mainMenu"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toTopOf="@id/cons_mainMenu" />

      <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/iv_btn_5"
        app:layout_constraintBottom_toBottomOf="@id/cons_mainMenu"
        app:layout_constraintEnd_toStartOf="@id/btn6"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toTopOf="@id/cons_mainMenu" />

      <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/iv_btn_6"
        app:layout_constraintBottom_toBottomOf="@id/cons_mainMenu"
        app:layout_constraintEnd_toStartOf="@id/btn7"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toTopOf="@id/cons_mainMenu" />

      <Button

        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/iv_btn_7"
        app:layout_constraintBottom_toBottomOf="@id/cons_mainMenu"
        app:layout_constraintEnd_toEndOf="@id/cons_mainMenu"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="@id/cons_mainMenu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

