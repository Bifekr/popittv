<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".activity.GameDetailActivity">

    <ScrollView
      android:id="@+id/scroll"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/plane_24">

        <androidx.cardview.widget.CardView
          android:id="@+id/parentDetailGame"
          android:layout_width="match_parent"
          android:layout_height="280dp"
          android:layout_margin="4dp"
          app:cardCornerRadius="@dimen/plane_16"
          app:layout_constraintBottom_toTopOf="@id/btnInstall"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHeight_percent="1"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0"
          app:layout_constraintWidth_percent="1">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/popit_yellow"
            android:paddingLeft="@dimen/plane_04"
            android:paddingTop="@dimen/plane_04"
            android:paddingRight="@dimen/plane_04"
            android:paddingBottom="6dp">


            <androidx.cardview.widget.CardView
              android:id="@+id/parentPoster_itemDef"
              android:layout_width="0dp"
              android:layout_height="0dp"
              app:cardCornerRadius="@dimen/plane_16"
              app:cardElevation="@dimen/plane_08"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"

              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintWidth_percent=".98">

              <ImageView
                android:id="@+id/ivPoster_itemVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/trophy" />
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
              android:id="@+id/gradiantdesc"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:background="@drawable/shape_tag5"
              android:elevation="@dimen/plane_16"

              app:layout_constraintBottom_toBottomOf="@+id/parentPoster_itemDef"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHeight_percent=".25"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="1">

              <LinearLayout
                android:id="@+id/parentTitleItemAllChannel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="@dimen/plane_16"
                android:gravity="bottom"
                android:orientation="vertical"
                android:transitionName="parentTitle_channel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".3"
                app:layout_constraintHorizontal_bias=".8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/gradiantdesc"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintWidth_percent=".62">

                <TextView
                  android:id="@+id/titleFa_video_itemVideoThumb"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="top"
                  android:ellipsize="end"
                  android:fontFamily="@font/lalezar_regular"
                  android:gravity="center_horizontal"
                  android:includeFontPadding="false"
                  android:maxLines="1"
                  android:minLines="1"
                  android:paddingStart="1dp"
                  android:paddingEnd="1dp"
                  android:textColor="@color/popit_brown"
                  android:textSize="16sp" />

                <TextView
                  android:id="@+id/titleEn_video_itemVideoThumb"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:ellipsize="end"
                  android:fontFamily="@font/bree_serif"
                  android:gravity="center_horizontal"
                  android:includeFontPadding="false"
                  android:maxLines="1"
                  android:minLines="1"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:textColor="@color/popit_brown"
                  android:textSize="14sp" />
              </LinearLayout>

              <LinearLayout
                android:drawableEnd="@drawable/ic_archive"
                android:id="@+id/parentLike_itemVidDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/plane_04"
                android:layout_marginStart="@dimen/plane_08"
                android:elevation="@dimen/plane_16"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/parentView_itemVidDef"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                  android:id="@+id/like"
                  android:layout_width="26dp"
                  android:layout_height="26dp"
                  android:src="@drawable/ic_archive" />

                <TextView
                  android:id="@+id/tvLike_itemVidDef"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/bree_serif"
                  android:padding="@dimen/plane_01"
                  android:textSize="14sp" />
              </LinearLayout>

              <LinearLayout
                android:id="@+id/parentView_itemVidDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/plane_04"
                android:elevation="@dimen/plane_16"
                android:gravity="center_horizontal|center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layout_constraintBottom_toBottomOf="@id/parentLike_itemVidDef"
                app:layout_constraintEnd_toStartOf="@id/parentPG_itemVidDef"
                app:layout_constraintStart_toEndOf="@id/parentLike_itemVidDef"
                app:layout_constraintTop_toTopOf="@id/parentLike_itemVidDef">

                <ImageView
                  android:id="@+id/view"
                  android:layout_width="26dp"
                  android:layout_height="26dp"
                  android:src="@drawable/ic_baseline_stars_24" />

                <TextView
                  android:id="@+id/tvView_itemVidDef"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/bree_serif"
                  android:padding="@dimen/plane_01"
                  android:textSize="14sp" />
              </LinearLayout>

              <LinearLayout
                android:id="@+id/parentPG_itemVidDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/plane_04"
                android:elevation="@dimen/plane_16"
                android:gravity="center_horizontal|center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layout_constraintBottom_toBottomOf="@id/parentLike_itemVidDef"
                app:layout_constraintEnd_toStartOf="@id/parentTitleItemAllChannel"
                app:layout_constraintStart_toEndOf="@id/parentView_itemVidDef"
                app:layout_constraintTop_toTopOf="@id/parentLike_itemVidDef"
                >

                <ImageView
                  android:id="@+id/pg"
                  android:layout_width="26dp"
                  android:layout_height="26dp"
                  android:src="@drawable/ic_baseline_groups_3_24" />

                <TextView
                  android:id="@+id/tvPg"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/bree_serif"
                  android:padding="@dimen/plane_04"
                  android:text=" 2+"
                  android:textSize="14sp" />
              </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
              android:id="@+id/parentChannelProfile_itemAllChan"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/plane_02"
              android:transitionName="cardProfile_channel"
              app:cardCornerRadius="14dp"
              app:cardElevation="@dimen/plane_16"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHeight_percent=".15"
              app:layout_constraintHorizontal_bias=".98"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="1">

              <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/Profile_channel_videoThumb"
                android:layout_width="79dp"
                android:layout_height="76dp"
                android:layout_gravity="center_vertical|center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".15"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1"
                app:riv_border_color="@color/blue_bg_light"
                app:riv_border_width="3dp"
                app:riv_corner_radius="14dp" />
            </androidx.cardview.widget.CardView>

          </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <Button
          android:id="@+id/btnInstall"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_marginTop="@dimen/plane_16"
          android:background="@drawable/shape_btn_bg"

          android:fontFamily="@font/baloo"
          android:text="@string/install"

          android:textAlignment="textStart"
          android:textColor="@color/popit_orange"
          app:layout_constraintBottom_toTopOf="@id/rvGame_poster"

          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/parentDetailGame"
          app:layout_constraintWidth_percent=".3" />

        <ProgressBar
          android:id="@+id/progressDown"
          style="@style/Widget.AppCompat.ProgressBar.Horizontal"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:indeterminateTint="@android:color/holo_red_light"
          android:visibility="gone"
          app:layout_constraintBottom_toTopOf="@id/rvGame_poster"
          app:layout_constraintEnd_toEndOf="@id/btnInstall"
          app:layout_constraintStart_toStartOf="@id/btnInstall"
          app:layout_constraintTop_toBottomOf="@id/btnInstall" />

        <ImageView
          android:layout_width="60dp"
          android:layout_height="40dp"
          android:elevation="32dp"
          android:src="@drawable/ic_archive"
          app:layout_constraintBottom_toBottomOf="@id/btnInstall"
          app:layout_constraintEnd_toEndOf="@id/btnInstall"
          app:layout_constraintHorizontal_bias="1"
          app:layout_constraintStart_toStartOf="@id/btnInstall"
          app:layout_constraintTop_toTopOf="@id/btnInstall" />

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvGame_poster"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/plane_16"
          android:background="@drawable/shape_btn_bg"
          android:paddingTop="@dimen/plane_08"
          android:paddingBottom="@dimen/plane_16"
          app:layout_constraintBottom_toTopOf="@id/titrGame"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/btnInstall" />

        <TextView
          android:id="@+id/titrGame"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/plane_16"
          android:background="@drawable/shape_btn_bg"
          android:fontFamily="@font/baloo"
          android:padding="@dimen/plane_08"
          android:text="Aboute Game - - - -"
          android:textSize="24sp"
          app:layout_constraintBottom_toTopOf="@id/gameDesc"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/rvGame_poster" />

        <TextView
          android:id="@+id/gameDesc"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/plane_16"
          android:background="@drawable/shape_btn_bg"
          android:fontFamily="@font/lalezar_regular"
          android:padding="@dimen/plane_06"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="@+id/rvGame_poster"
          app:layout_constraintStart_toStartOf="@+id/rvGame_poster"
          app:layout_constraintTop_toBottomOf="@id/titrGame" />


      </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
